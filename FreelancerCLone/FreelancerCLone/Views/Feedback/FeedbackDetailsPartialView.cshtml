@model FreelancerCLone.DbModels.Feedback

@{
    Layout = null;
}

<div class="modal fade" id="FeedbackDetailsModal" tabindex="-1" aria-labelledby="FeedbackDetailsModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h1 class="modal-title fs-5" id="FeedbackDetailsModalLabel">Info</h1>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <form asp-action="UpdateStatus" enctype="multipart/form-data">
                    <input asp-for="Id" value="@ViewBag.Id" hidden />

                    <span>Category: @Model.Category.Value</span>

                    <p>@Model.Message</p>


                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                        <input type="submit" value="Save" class="btn btn-primary" />
                    </div>
                </form>

            </div>

        </div>
    </div>
</div>
