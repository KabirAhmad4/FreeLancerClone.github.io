@page
@model LoginModel

@{
    ViewData["Title"] = "Log in";
}


@*@{
    Layout = "~/Views/Shared/_LayoutFullPage.cshtml";
}*@
<div class="row w-100 mx-0">
    <div class="col-lg-4 mx-auto">
        <div class="auth-form-light text-left py-5 px-4 px-sm-5">
            <div class="brand-logo">
                <img src="~/dashboard/images/logo.svg" alt="logo">
            </div>
            <h4>Welcome Back!</h4>
            <h6 class="fw-light">Sign in to continue.</h6>
            <form id="account" class="pt-3" method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="Input.Email" class="form-label"></label>
                    <input asp-for="Input.Email" class="form-control form-control-lg" autocomplete="email" aria-required="true" placeholder="Username" />

                    <span asp-validation-for="Input.Email" class="text-danger"></span>

                </div>
                <div class="form-group">
                    <label asp-for="Input.Password" class="form-label"></label>
                    <input asp-for="Input.Password" class="form-control form-control-lg" autocomplete="current-password" placeholder="Password" aria-required="true" />

                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                </div>
                <div class="mt-3">
                    <button class="btn btn-block btn-primary btn-lg font-weight-medium auth-form-btn" type="submit">SIGN IN</button>
                </div>
                <div class="my-2 d-flex justify-content-between align-items-center">
                    <div class="form-check">
                        <label asp-for="Input.RememberMe" class="form-check-label text-muted">
                            <input class="form-check-input" asp-for="Input.RememberMe" />
                            Keep me signed in
                        </label>
                    </div>

                    <a href="/Identity/Account/ForgotPassword" class="auth-link text-black">Forgot password?</a>
                </div>
                @*    <div class="mb-2">
                <button type="button" class="btn btn-block btn-google auth-form-btn">
                <i class="ti-google me-2"></i>Connect using Google
                </button>
                </div>*@
                <div class="text-center mt-2 fw-light">
                    Don't have an account? <a href="/Identity/Account/register" class="text-primary">Create</a>
                </div>
            </form>
        </div>
    </div>
</div>
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}









