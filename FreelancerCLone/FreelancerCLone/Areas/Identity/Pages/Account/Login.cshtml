@page
@model LoginModel

@{
    ViewData["Title"] = "Log in";
}

<h4>Welcome Back!</h4>
<h6 class="fw-light">Sign in to continue.</h6>
<form id="account" class="pt-3" method="post">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div class="form-floating my-2">
        <input asp-for="Input.Email" class="form-control form-control-lg" autocomplete="email" aria-required="true" placeholder="Username" />
        <label asp-for="Input.Email" class="form-label"></label>

        <span asp-validation-for="Input.Email" class="text-danger"></span>

    </div>
    <div class="form-floating my-2">
        <input asp-for="Input.Password" class="form-control form-control-lg" autocomplete="current-password" placeholder="Password" aria-required="true" />
        <label asp-for="Input.Password" class="form-label"></label>

        <span asp-validation-for="Input.Password" class="text-danger"></span>
    </div>
    <div class="my-2 d-flex justify-content-between align-items-center">
        <div class="form-check">
            <label asp-for="Input.RememberMe" class="form-check-label text-muted">
                <input class="form-check-input" asp-for="Input.RememberMe" />
                Keep me signed in
            </label>
        </div>

        <a href="/Identity/Account/ForgotPassword" class="auth-link text-black">Forgot password?</a>
    </div>
    <div class="mt-3 text-center">
        <button class="btn btn-block btn-primary btn-lg font-weight-medium auth-form-btn" type="submit">SIGN IN</button>
    </div>
    <div class="text-center mt-2 fw-light">
        Don't have an account? <a href="/Identity/Account/register" class="text-primary">Create</a>
    </div>
</form>
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}